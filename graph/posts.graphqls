type Post {
  id: ID!
  name: String!
  author: String!
  content: String!
  commentsAllowed: Boolean!
}

type PostResp {
  id: ID!
  name: String!
  author: String!
  content: String!
}

input InputPost {
  name: String!
  content: String!
  author: String!
  commentsAllowed: Boolean!
}

type Query {
  GetAllPosts(page: Int!): [PostResp!]!
  GetPostById(id: Int!): Post!
}

type Mutation {
  CreatePost(post: InputPost!): PostResp!
}
